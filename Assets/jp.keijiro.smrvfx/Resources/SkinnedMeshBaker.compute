    //    NormalBuffer[i * 3 + 2]
    //);

	//p0 = mul(OldTransform, float4(p0 * oneDivideScale, 1)).xyz;
	p1 = mul(Transform, float4(p1 * oneDivideScale, 1)).xyz;
	//n1 = mul(Transform, float4(n1 * oneDivideScale, 0)).xyz;

    PositionMap[id] = float4(p1, 1);
    //VelocityMap[id] = float4((p1 - p0) * FrameRate, 0);
